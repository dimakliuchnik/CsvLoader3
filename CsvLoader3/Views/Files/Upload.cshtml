        function UploadFileChunk(Chunk, FileName) {
            var FD = new FormData();
            FD.append('file', Chunk, FileName);
            $.ajax({
                type: "POST",
                url: 'http://localhost:65166/Files/UploadFile/',
                contentType: false,
